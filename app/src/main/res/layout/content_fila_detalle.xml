<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="800dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#d4ced7"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="software.proyecto.proyectox.FilaDetalleActivity"
    tools:showIn="@layout/activity_fila_detalle">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imgSemaforo_AFD"
        android:layout_marginTop="68dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:text="Doctor:"

        android:id="@+id/doctor"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/tvMsj_AFD"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tvDoctor_AFD"
        android:text="Cesar Garcia"
        android:layout_below="@+id/doctor"
        android:layout_alignLeft="@+id/tvAsistente_AFD"
        android:layout_alignStart="@+id/tvAsistente_AFD" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Titulo:"
        android:id="@+id/textView6"
        android:layout_below="@+id/tvDoctor_AFD"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tvPediatra_AFD"
        android:text="Pediatra"
        android:layout_marginTop="27dp"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignLeft="@+id/tvTiempo_Estimado_AFD"
        android:layout_alignStart="@+id/tvTiempo_Estimado_AFD" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hora Entrada de en Fila:"
        android:id="@+id/textView"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="-10dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tvHora_llegada_AFD"
        android:text="11:30AM"
        android:layout_alignTop="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp"
        android:layout_marginLeft="78dp" />

    <TextView
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tiempo Estimado:"
        android:id="@+id/textView8"
        android:layout_below="@+id/tvHora_llegada_AFD"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tvTiempo_Estimado_AFD"
        android:text="20 Min"
        android:layout_below="@+id/textView8"
        android:layout_alignLeft="@+id/tvTurnos_Restantes_AFD"
        android:layout_alignStart="@+id/tvTurnos_Restantes_AFD" />

    <TextView
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Turnos Restantes:"
        android:id="@+id/textView9"
        android:layout_below="@+id/tvTiempo_Estimado_AFD"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tvTurnos_Restantes_AFD"
        android:text="07"
        android:layout_below="@+id/textView9"
        android:layout_toRightOf="@+id/doctor"
        android:layout_toEndOf="@+id/doctor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Asistente:"
        android:textStyle="bold"
        android:id="@+id/textView7"
        android:layout_below="@+id/tvPediatra_AFD"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Manuel Saleta"
        android:id="@+id/tvAsistente_AFD"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/tvPediatra_AFD"
        android:layout_alignStart="@+id/tvPediatra_AFD"
        android:layout_marginLeft="-2dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salir de Fila"
        android:id="@+id/btSalir_AFD"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/tvTurnos_Restantes_AFD"
        android:layout_alignRight="@+id/imgSemaforo_AFD"
        android:layout_alignEnd="@+id/imgSemaforo_AFD" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#fd868b88"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Su turno esta proximo es recomendable estar cerca."
        android:id="@+id/tvMsj_AFD"
        android:layout_below="@+id/imgSemaforo_AFD"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>

</ScrollView>
